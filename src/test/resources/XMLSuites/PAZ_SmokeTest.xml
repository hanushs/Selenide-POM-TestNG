<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Create PAZ Test">
    <parameter name="dataFilePath" value="src\test\resources\DataCSV\PAZTestData.csv"/>

    <listeners>
        <listener class-name="com.hv.pages.Utils.IHVListener" />
    </listeners>

    <test verbose="1" name="PAZ_SmokeTest" preserve-order="true">
        <classes>
            <class name="com.hv.test.PAZ_SmokeTest">
                <methods>
                    <include name="createNewAnalyzerReport"/>
                    <include name="addFieldsToReportWithDoubleClick"/>
                    <include name="addFieldsToReportWithRightClick"/>
                    <include name="addFieldsToReportWithDnD"/>
                    <include name="sortFields"/>
                    <include name="openReportOptions"/>
                    <include name="saveReportWithName"/>
                    <include name="exportAs"/>
                </methods>
            </class>
        </classes>
    </test>


</suite>